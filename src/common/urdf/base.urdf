<?xml version="1.0"?>
<robot name="base">
	<material name = "blue">
		<color rgba="0 0 0.8 1"/>
	</material>
	<material name = "black">
		<color rgba ="0 0 0 1"/>
	</material>
	<material name = "white">
		<color rgba = "1 1 1 1"/>
	</material>
	<material name = "red">
		<color rgba = "1 0 0 1"/>
	</material>

	<link name = "base_link">
		<visual>
			<geometry>
				<cylinder length="0.4" radius="0.26"/>
			</geometry>
			<origin xyz = "0 0 0.2"/>
			<material name = "white"/>
		</visual>
	</link>
	<link name = "laser">
		<visual>
			<geometry>
				<cylinder length="0.04" radius="0.03"/>
			</geometry>
			<origin xyz = "0 0 0"/>
			<material name="red"/>
		</visual>
	</link>
	<link name = "point">
		<visual>
			<geometry>
				<cylinder length="0.04" radius="0.03"/>
			</geometry>
			<origin xyz = "0 0 0"/>
			<material name="red"/>
		</visual>
	</link>
    <link name = "imu">
		<visual>
			<geometry>
				<cylinder length="0.01" radius="0.01"/>
			</geometry>
			<origin xyz = "0 0 0"/>
			<material name="blue"/>
		</visual>
	</link>

    <joint name="base_to_laser" type="fixed">
		<parent link="base_link"/>
		<child link="laser"/>
		<origin xyz="0.3 0 0.2"/>	
	</joint>
	<joint name="base_to_point" type="fixed">
		<parent link="base_link"/>
		<child link="point"/>
		<origin xyz="0.21 0 0.42"/>	
	</joint>
    <joint name="base_to_imu" type="fixed">
		<parent link="base_link"/>
		<child link="imu"/>
		<origin xyz="0 0 0.3"/>	
	</joint>

</robot>
